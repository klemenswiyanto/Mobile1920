<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:drawableEnd="@android:drawable/btn_star_big_on"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/instruction_body"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ktk1"
            style="@style/white_box"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@+id/ktk3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Title" />

        <TextView
            android:id="@+id/ktk2"
            style="@style/white_box"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktk1" />

        <TextView
            android:id="@+id/ktk3"
            style="@style/white_box"
            android:layout_width="110dp"
            android:layout_height="210dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ktk6"
            app:layout_constraintTop_toBottomOf="@+id/Title" />

        <TextView
            android:id="@+id/ktk6"
            style="@style/white_box"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ktk9"
            app:layout_constraintStart_toEndOf="@+id/ktk2"
            app:layout_constraintTop_toBottomOf="@+id/ktk1"
            app:layout_constraintVertical_bias="0.181" />

        <TextView
            android:id="@+id/ktk7"
            style="@style/white_box"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ktk5"
            app:layout_constraintTop_toBottomOf="@+id/ktk9" />

        <TextView
            android:id="@+id/ktk4"
            style="@style/white_box"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/ktk5"
            app:layout_constraintEnd_toStartOf="@+id/ktk9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktk2"
            app:layout_constraintVertical_bias="0.933" />

        <TextView
            android:id="@+id/ktk5"
            style="@style/white_box"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ktk8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktk9"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/ktk8"
            style="@style/white_box"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktk7" />

        <TextView
            android:id="@+id/ktk9"
            style="@style/white_box"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktk3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>